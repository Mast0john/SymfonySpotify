{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <h1>{{ album.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" href="{{ path('app_homepage') }}">Accueil</a>

    {% if is_granted('ROLE_ARTIST') %}
    <a class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" href="{{ path('app_album_edit', {'id': album.id}) }}">edit</a>
    
    {{ include('album/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
