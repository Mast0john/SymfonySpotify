<div class="mt-10">
    <!-- playlist list header -->
    <div class="flex text-gray-600">
        <div class="p-2 w-8 flex-shrink-0"></div>
        <div class="p-2 w-8 flex-shrink-0"></div>
        <div class="p-2 w-full">Playlists</div>
    </div>

    {% for playlist in playlists %}
        <div class="flex border-b border-gray-800 hover:bg-green-700/25">
            <div class="p-3 w-full">{{ playlist.name }}</div>
            {% if is_granted('ROLE_USER') %}
                <div class="p-3 w-32 flex-shrink-0 text-right"><a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">✏️ modifier</a></div>
            {% endif %}
        </div>
    {% else %}
        <div class="flex border-b border-gray-800 hover:bg-gray-800">
            <p>Aucune playlist</p>
        </div>
    {% endfor %}
</div>


{% if is_granted('ROLE_USER') %}
    <button class="bg-teal-700/70 hover:bg-teal-700 text-white font-bold py-2 rounded shadow-lg hover:shadow-xl transition duration-200 p-2 m-2"><a href="{{ path('app_playlist_new') }}">Create new</a></button>
{% endif %}