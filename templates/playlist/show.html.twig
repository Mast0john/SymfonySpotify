{% extends 'base.html.twig' %}

{% block title %}Playlist{% endblock %}

{% block body %}
    <h1>{{ playlist.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ playlist.id }}</td>
            </tr>
            <tr>
                <th>Nom Playlist</th>
                <td>{{ playlist.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_homepage') }}">Accueil</a>

    {% if is_granted('ROLE_USER') %}
    <a href="{{ path('app_playlist_edit', {'id': playlist.id}) }}">edit</a>
    
    {{ include('playlist/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
