{% extends 'base.html.twig' %}

{% block title %}Song{% endblock %}

{% block body %}
    <h1>{{ song.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ song.name }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ song.duration }}</td>
            </tr>
            <tr>
                <th>FilePath</th>
                <td>{{ song.filePath }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_homepage') }}">Accueil</a>

    {% if is_granted('ROLE_ARTIST') %}
    <a href="{{ path('app_song_edit', {'id': song.id}) }}">edit</a>
    
    {{ include('song/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
