
    <h1>Song index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Duration</th>
                <th>FilePath</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for song in songs %}
            <tr>
                <td>{{ song.name }}</td>
                <td>{{ song.duration }}</td>
                <td>
                    <a href="{{ path('app_song_show', {'id': song.id}) }}">Voir</a>
                    {% if is_granted('ROLE_ARTIST') %}
                    <a href="{{ path('app_song_edit', {'id': song.id}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_ARTIST') %}
    <a href="{{ path('app_song_new') }}">Create new</a>
    {% endif %}
